<Page
    x:Class="Win8Twitter.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Win8Twitter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="20">
            <Button x:Name="AuthenticationButton" Click="AuthenticationButton_Click_1" Content="Authenticate" ></Button>
            <Button x:Name="TweetButton" Content="Tweet" Click="TweetButton_Click"></Button>
            <TextBlock x:Name="StatusTextBlock" Text="status will appear here" FontSize="16"></TextBlock>
        </StackPanel>
    </Grid>
</Page>
